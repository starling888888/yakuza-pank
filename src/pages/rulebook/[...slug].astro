---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import TableOfContents from '../../components/TableOfContents.tsx'; // Import TableOfContents

export async function getStaticPaths() {
  const rulebookEntries = await getCollection('rulebook');
  return rulebookEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<MainLayout title={entry.data.title} description={entry.data.description}>
  <article class="flex">
    <div class="flex-grow">
      <h1>{entry.data.title}</h1>
      <Content />
    </div>
    {entry.data.showToc && ( // Conditionally render TableOfContents
      <aside class="hidden lg:block w-64 ml-8 flex-shrink-0">
        <TableOfContents client:load />
      </aside>
    )}
  </article>
</MainLayout>